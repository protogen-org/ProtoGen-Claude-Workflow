{
  "mcpServers": {
    "holoviz": {
      "type": "stdio",
      "command": "uvx",
      "args": ["holoviz-mcp"],
      "env": {}
    },
    "context7": {
      "type": "http",
      "url": "https://mcp.context7.com/mcp"
    },
    "playwright": {
      "type": "stdio",
      "command": "cmd",
      "args": ["/c", "npx", "@playwright/mcp@latest"],
      "env": {}
    },
    "mui-mcp": {
      "type": "stdio",
      "command": "cmd",
      "args": ["/c", "npx", "-y", "@mui/mcp@latest"],
      "env": {}
    },
    "notion": {
      "type": "stdio",
      "command": "cmd",
      "args": ["/c", "npx", "-y", "@notionhq/notion-mcp-server"],
      "env": {
        "NOTION_TOKEN": "YOUR_NOTION_TOKEN_HERE"
      },
      "comment": "Notion API access - Get token from https://www.notion.so/profile/integrations"
    },
    "postgres": {
      "type": "stdio",
      "command": "python",
      "args": [
        "C:\\Users\\YOUR_USERNAME\\Documents\\mcp-postgres\\postgres_server.py",
        "--conn",
        "postgresql://USER:PASSWORD@HOST:PORT/protogen_rw_stage"
      ],
      "env": {},
      "comment": "ProtoGen staging database - Replace USER, PASSWORD, HOST, PORT with actual credentials"
    },
    "protogen_rw": {
      "type": "stdio",
      "command": "python",
      "args": [
        "C:\\Users\\YOUR_USERNAME\\Documents\\mcp-postgres\\postgres_server.py",
        "--conn",
        "postgresql://USER:PASSWORD@HOST:PORT/protogen_rw"
      ],
      "env": {},
      "comment": "ProtoGen production database - Replace USER, PASSWORD, HOST, PORT with actual credentials"
    },
    "protogen_rw_dev": {
      "type": "stdio",
      "command": "python",
      "args": [
        "C:\\Users\\YOUR_USERNAME\\Documents\\mcp-postgres\\postgres_server.py",
        "--conn",
        "postgresql://USER:PASSWORD@HOST:PORT/protogen_rw_dev"
      ],
      "env": {},
      "comment": "ProtoGen development database - Replace USER, PASSWORD, HOST, PORT with actual credentials"
    }
  }
}
